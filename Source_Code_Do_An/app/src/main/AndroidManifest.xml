        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoAnMobileMusicMedia0312"
        tools:targetApi="31">
        <activity
            android:name=".MyPlaylistActivity"
            android:exported="true" />
